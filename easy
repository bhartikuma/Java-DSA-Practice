/*
 * Problem: 9. Palindrome Number
 * Link: https://leetcode.com/problems/palindrome-number/
 * Difficulty: Easy
 * 
 * Approach: 
 * - Negative numbers are not palindrome (due to '-')
 * - Reverse only half of the number to avoid overflow
 * - Compare reversed half with original half
 * 
 * Time Complexity: O(log n)  [digits in number]
 * Space Complexity: O(1)
 */

class Solution {
    public boolean isPalindrome(int x) {
        // Negative numbers and numbers ending with 0 (except 0) are not palindrome
        if (x < 0 || (x % 10 == 0 && x != 0)) {
            return false;
        }
        
        int reversedHalf = 0;
        while (x > reversedHalf) {
            reversedHalf = reversedHalf * 10 + x % 10;
            x /= 10;
        }
        
        // For odd length: reversedHalf / 10 to ignore middle digit
        return x == reversedHalf || x == reversedHalf / 10;
    }
}
